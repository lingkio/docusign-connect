@page
@model DocusignModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-md-12">
        @if (@Model.ErrorMessage == null)
        {
            <h2>DocuSign url : </h2>
            <p>
                @Model.DocusignUrl
            </p>
        }
        else
        {
            <h2 style="color: red;">Error: </h2>
            <p style="color: red;">
                @Model.ErrorMessage
            </p>
        }
    </div>
</div>